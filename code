//BR-PT -----
using System;

namespace MyApp 
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double num1, num2, num3;
            Console.WriteLine("Coloque o valor da base do triângulo: ");
            num1 = double.Parse(Console.ReadLine());
            Console.WriteLine("Coloque o valor da altura do triângulo: ");
            num2 = double.Parse(Console.ReadLine());
            num3 = (num1 * num2) / 2;
            Console.WriteLine("A area do triângulo é igual à: " + num3);

        }
    }
}
//codigo acaba aqui

//EN -----
using System;

namespace MyApp
{
     internal class Program
     {
         static void Main(string[] args)
         {
             double num1, num2, num3;
             Console.WriteLine("Enter the triangle base value: ");
             num1 = double.Parse(Console.ReadLine());
             Console.WriteLine("Enter the height value of the triangle: ");
             num2 = double.Parse(Console.ReadLine());
             num3 = (num1 * num2) / 2;
             Console.WriteLine("The area of the triangle is equal to: " + num3);

         }
     }
}
//code ends here
